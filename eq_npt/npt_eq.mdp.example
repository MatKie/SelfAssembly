; em.mdp - used as input into grompp to generate ions.tpr
; Parameters describing what to do, when to stop and what to save
integrator  = md         ; Algorithm (steep = steepest descent minimization)
dt          = 0.01
nstcomm     = 100
nsteps      = 10000         ; Maximum number of (minimization) steps to perform
nstxout     = 5000
nstvout     = 5000
nstfout     = 0
nstlog      = 5000
; Parameters describing how to find the neighbors of each atom and how to calculate the interactions
nstlist         = 5         ; Frequency to update the neighbor list and long range forces
cutoff-scheme	= group     ; old neighbor searching because of non LJ interactions 
ns_type         = grid      ; Method to determine neighbor list (simple, grid)
pbc             = xyz       ; Periodic Boundary Conditions in all 3 dimensions
rlist           = 1.75       ; cutoff for neighbor searching

;Electrostatics
coulombtype     = PME       ; Treatment of long range elctrostatic interactions
rcoulomb        = 1.75         ; cutoff for coulomb interactions
epsilon-r       = DIELECTRIC
;VDWTYPE
vdwtype         = user     ; Needs shifting via modifier
vdw-modifier    = None     ; shift potential
rvdw            = 1.5         ; vdw cutoff

energygrps = WTYPE SDKCT SDKCM SDKSOD SDKSO4
energygrp_table = WTYPE WTYPE SDKCT SDKCT SDKCM SDKCM SDKSOD SDKSOD SDKSO4  SDKSO4 WTYPE SDKCT WTYPE SDKCM WTYPE SDKSOD WTYPE SDKSO4 SDKCT SDKCM SDKCT SDKSOD SDKCT SDKSO4 SDKCM SDKSOD SDKCM SDKSO4 SDKSOD SDKSO4

tcoupl   = v-rescale;
tc-grps  = SDS SDKSOD_WTYPE;
tau-t    = 0.2 0.2;
ref-t    = TEMP TEMP ;

pcoupl          = berendsen ;
pcoupltype      = isotropic ;
tau-p           = 0.5 ;
compressibility = 0.000045 ;
ref-p           = PRESS ;

gen-vel  = yes;
gen_temp = TEMP;
